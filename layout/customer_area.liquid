<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="imagetoolbar" content="no" />
    <meta name="MSSmartTagsPreventParsing" content="true" />

    <title>{{ shop.name }} - {{ page_title | escape }}</title>

    {{ 'customer.css' | shopify_asset_url | stylesheet_tag }}

    {{ "shopify_common.js" | shopify_asset_url | script_tag }}
    {{ "customer_area.js"  | shopify_asset_url | script_tag }}
    <!--[if lt IE 7]>
      {{ 'json2.js' | shopify_asset_url | script_tag }}
    <![endif]-->

    {{ content_for_header }}
  </head>

  <body>
    <div id="container">

      <div id="header">
        <div id="logo"><!-- css hook for logos --></div>
        <h1 id="tagline">{{ shop.name }} <span class="subtitle">Customer Area</span></h1>
        {% if customer %}
          <p id="logout" class="action_link note"><span>Logged in as {{ customer.name }}</span> {{ "(logout)" | customer_logout_link }}</p>
        {% endif %}
      </div>

      <div id="wrapper" class="clearfix">
        {{ content_for_layout }}
      </div>

      <div id="footer">
        {% if template == 'customers/account' or template == 'customers/order' %}
          {% if shop.email %}<a href="mailto:{{shop.email}}">Contact Shop Owner</a>{% endif %}
        {% endif %}
      </div>

    </div>
  </body>
</html>
